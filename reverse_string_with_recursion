//swap ltters in string through recursion 
#include <iostream>

using namespace std;

void reversestring(string &word,int start,int end)
{
    if(start>end)
    {
         return;
    }
    swap(word[start],word[end]);
    start++;
    end--;
    reversestring(word,start,end);
//n-i-1 instead of j 
}
int main()
{
    string name="aakriti";
    int start=0;
    int end=name.length()-1;
    
    reversestring(name,start,end);
    cout<<name;

    return 0;
}
